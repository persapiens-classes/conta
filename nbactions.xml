<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>build</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>install</goal>
        </goals>
    </action>
    <action>
        <actionName>debug.test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test-compile</goal>
            <goal>surefire:test</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
            <forkMode>once</forkMode>
            <maven.surefire.debug>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>test</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test</goal>
        </goals>
    </action>
    <action>
        <actionName>test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test-compile</goal>
            <goal>surefire:test</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
        </properties>
    </action>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Duser.country=BR -Duser.language=pt_BR -classpath %classpath br.edu.ifrn.conta.ContaApplication</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Duser.country=BR -Duser.language=pt_BR -classpath %classpath br.edu.ifrn.conta.ContaApplication</exec.args>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Duser.country=BR -Duser.language=pt_BR -classpath %classpath br.edu.ifrn.conta.ContaApplication</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-attach-test-source-javadoc</actionName>
        <displayName>test-source-javadoc</displayName>
        <goals>
            <goal>clean</goal>
            <goal>verify</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>attach-test-jar</activatedProfile>
            <activatedProfile>attach-source</activatedProfile>
            <activatedProfile>attach-javadoc</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>CUSTOM-checkstyle-pmd-cpd-cycles-findbugs</actionName>
        <displayName>checkstyle-pmd-cpd-cycles-findbugs</displayName>
        <goals>
            <goal>clean</goal>
            <goal>verify</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>check-checkstyle</activatedProfile>
            <activatedProfile>check-cycles</activatedProfile>
            <activatedProfile>check-pmd-cpd</activatedProfile>
            <activatedProfile>check-findbugs</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>CUSTOM-cobertura</actionName>
        <displayName>cobertura</displayName>
        <goals>
            <goal>clean</goal>
            <goal>cobertura:check-integration-test</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>attach-integration-test</activatedProfile>
            <activatedProfile>check-cobertura-integration-test</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>CUSTOM-cobertura-site</actionName>
        <displayName>cobertura-site</displayName>
        <goals>
            <goal>clean</goal>
            <goal>cobertura:cobertura-integration-test</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>attach-integration-test</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>CUSTOM-site</actionName>
        <displayName>site</displayName>
        <goals>
            <goal>clean</goal>
            <goal>site</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>attach-integration-test</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>CUSTOM-buildAll</actionName>
        <displayName>buildAll</displayName>
        <goals>
            <goal>clean</goal>
            <goal>cobertura:check-integration-test</goal>
            <goal>verify</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>check-checkstyle</activatedProfile>
            <activatedProfile>check-cycles</activatedProfile>
            <activatedProfile>check-pmd-cpd</activatedProfile>
            <activatedProfile>check-findbugs</activatedProfile>
            <activatedProfile>check-cobertura-integration-test</activatedProfile>
            <activatedProfile>attach-test-jar</activatedProfile>
            <activatedProfile>attach-source</activatedProfile>
            <activatedProfile>attach-javadoc</activatedProfile>
            <activatedProfile>attach-integration-test</activatedProfile>
            <activatedProfile>sign-artifacts</activatedProfile>
        </activatedProfiles>
    </action>
</actions>
