<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.persapiens</groupId>
        <artifactId>jsf-spring-boot-parent</artifactId>
        <version>1.7.3</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>br.edu.ifrn</groupId>
    <artifactId>conta</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <java.version>1.8</java.version>
        
        <pmd.excludeFromFailureFile>${check.dir}/pmd/pmd-exclude.properties</pmd.excludeFromFailureFile>
        <cobertura.totalLineRate>41</cobertura.totalLineRate>
        <cobertura.totalBranchRate>48</cobertura.totalBranchRate>
        <cobertura.packageLineRate>4</cobertura.packageLineRate>
        <cobertura.packageBranchRate>50</cobertura.packageBranchRate>
        <cobertura.lineRate>0</cobertura.lineRate>
        <cobertura.branchRate>0</cobertura.branchRate>
        
        <testng.version>6.9.12</testng.version>
        <juplo-maven-plugin.version>2.0.0</juplo-maven-plugin.version>        
        <spring-data-releasetrain.version>Hopper-SR2</spring-data-releasetrain.version>
        <querydsl.version>4.1.3</querydsl.version>
        <apt-maven-plugin.version>1.1.3</apt-maven-plugin.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-apt</artifactId>
                <version>${querydsl.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-jpa</artifactId>
                <version>${querydsl.version}</version>
            </dependency>    
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>com.github.persapiens</groupId>
            <artifactId>jsf-spring-boot-starter</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>runtime</scope>
        </dependency>		
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <scope>test</scope>
        </dependency>        
        <dependency>
            <groupId>com.querydsl</groupId>
            <artifactId>querydsl-apt</artifactId>
        </dependency>
        <dependency>
            <groupId>com.querydsl</groupId>
            <artifactId>querydsl-jpa</artifactId>
        </dependency>    
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.mysema.maven</groupId>
                    <artifactId>apt-maven-plugin</artifactId>
                    <version>${apt-maven-plugin.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>process</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>target/generated-sources/java</outputDirectory>
                                <processor>com.querydsl.apt.jpa.JPAAnnotationProcessor</processor>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>                
                <plugin>
                    <groupId>de.juplo</groupId>
                    <artifactId>hibernate-maven-plugin</artifactId>
                    <version>${juplo-maven-plugin.version}</version>
                    <configuration>
                        <delimiter>;</delimiter>
                        <format>true</format>
                        <dialect>org.hibernate.dialect.PostgreSQLDialect</dialect>                            
                        <scanDependencies>system</scanDependencies>
                        <export>false</export>
                        <show>true</show>
                    </configuration>
                </plugin>         
            </plugins>
        </pluginManagement>
        
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <executable>true</executable>
                </configuration>			
            </plugin>
            <plugin>
                <groupId>com.mysema.maven</groupId>
                <artifactId>apt-maven-plugin</artifactId>
            </plugin>        
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <configuration>
                    <instrumentation>
                        <ignores>
                            <ignore>br.edu.ifrn.conta.dominio.Q*</ignore>
                        </ignores>
                        <excludes>
                            <exclude>br/edu/ifrn/conta/dominio/QCategoria.class</exclude>
                            <exclude>br/edu/ifrn/conta/dominio/QConta.class</exclude>
                            <exclude>br/edu/ifrn/conta/dominio/QContaCredito.class</exclude>
                            <exclude>br/edu/ifrn/conta/dominio/QContaDebito.class</exclude>
                            <exclude>br/edu/ifrn/conta/dominio/QContaPatrimonio.class</exclude>
                            <exclude>br/edu/ifrn/conta/dominio/QDono.class</exclude>
                            <exclude>br/edu/ifrn/conta/dominio/QLancamento.class</exclude>
                            <exclude>br/edu/ifrn/conta/dominio/QValorInicialDoDonoNaContaPatrimonio.class</exclude>
                        </excludes>
                    </instrumentation>
                </configuration>            
            </plugin>
        </plugins>
    </build>

    <profiles>        
        <!-- criar script do esquema do banco de dados -->
        <profile>
            <id>schema</id>
            <build>
                <plugins>
                    <!-- gerando o script de criacao do banco -->            
                    <plugin>
                        <groupId>de.juplo</groupId>
                        <artifactId>hibernate-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>drop-schema</id>
                                <goals>
                                    <goal>drop</goal>
                                </goals>
                                <configuration>
                                    <outputFile>${project.build.directory}/classes/drop-schema.sql</outputFile>
                                </configuration>
                            </execution>
                            <execution>
                                <id>create-schema</id>
                                <goals>
                                    <goal>create</goal>
                                </goals>
                                <configuration>
                                    <outputFile>${project.build.directory}/classes/create-schema.sql</outputFile>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>         
                </plugins>
            </build>
        </profile>
    </profiles>

    <name>conta</name>
    <description>Conta do Desenvolvimento de Sistemas Corporativos</description>
    <url>https://github.com/persapiens/conta</url>
    <inceptionYear>2016</inceptionYear>

    <!-- Issue Managment -->
    <issueManagement>
        <system>Github</system>
        <url>https://github.com/persapiens/conta/issues</url>
    </issueManagement>

    <!-- SCM -->
    <scm>
        <connection>scm:git:https://github.com/persapiens/conta.git</connection>
        <developerConnection>scm:git:https://github.com/persapiens/conta.git</developerConnection>
        <url>scm:git:https://github.com/persapiens/conta.git</url>
        <tag>HEAD</tag>
    </scm>

    <!-- Organization -->
    <organization>
        <name>Persapiens</name>
        <url>https://github.com/persapiens</url>
    </organization>
    
    <developers>
        <developer>
            <id>persapiens</id>
            <name>Marcelo Romulo Fernandes</name>
            <email>persapiens@gmail.com</email>
            <timezone>-3</timezone>
        </developer>
    </developers>
    
    <repositories>
        <repository>
            <id>bintray</id>
            <name>bintray</name>
            <url>http://jcenter.bintray.com</url>
        </repository>
    </repositories>
</project>
